<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100">
        <div class="col-md-8 col-lg-6 mx-auto">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-geo-alt text-primary" style="font-size: 3rem;"></i>
                        <h3 class="mt-2">Select Branch</h3>
                        <p class="text-muted">Choose which branch you want to manage</p>
                    </div>
                    
                    <form method="POST" action="/select-branch">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card branch-card" onclick="selectBranch('Kongara Kalan')">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-building text-primary" style="font-size: 2.5rem;"></i>
                                        <h5 class="mt-3">Kongara Kalan</h5>
                                        <p class="text-muted">Main Branch</p>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="branch" value="Kongara Kalan" id="kongara">
                                            <label class="form-check-label" for="kongara">
                                                Select this branch
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="card branch-card" onclick="selectBranch('Gurramguda')">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-building text-success" style="font-size: 2.5rem;"></i>
                                        <h5 class="mt-3">Gurramguda</h5>
                                        <p class="text-muted">Secondary Branch</p>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="branch" value="Gurramguda" id="gurramguda">
                                            <label class="form-check-label" for="gurramguda">
                                                Select this branch
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 mt-3" id="continueBtn" disabled>
                            <i class="bi bi-arrow-right"></i> Continue to Dashboard
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function selectBranch(branch) {
    document.querySelectorAll('input[name="branch"]').forEach(radio => {
        radio.checked = radio.value === branch;
    });
    document.getElementById('continueBtn').disabled = false;
    
    // Visual feedback
    document.querySelectorAll('.branch-card').forEach(card => {
        card.classList.remove('border-primary');
    });
    event.currentTarget.classList.add('border-primary');
}
</script>