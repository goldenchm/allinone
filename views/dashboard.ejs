<%- include('layout', { 
    title: 'Dashboard - Golden Chicken and Mutton Centre', 
    showNavbar: true, 
    branch: branch,
    body: `
<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-primary text-white p-4 rounded">
                <h2><i class="bi bi-house"></i> Dashboard</h2>
                <p class="mb-0">Welcome to ${branch} branch management system</p>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 dashboard-card" onclick="location.href='/stock'">
                <div class="card-body text-center">
                    <i class="bi bi-box text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Stock Entry</h5>
                    <p class="text-muted">Add daily stock received</p>
                    <a href="/stock" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Stock
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 dashboard-card" onclick="location.href='/sales'">
                <div class="card-body text-center">
                    <i class="bi bi-cart text-success" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Sales Entry</h5>
                    <p class="text-muted">Record customer sales</p>
                    <a href="/sales" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add Sale
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 dashboard-card" onclick="location.href='/stock-report'">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up text-info" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Stock Report</h5>
                    <p class="text-muted">View remaining stock</p>
                    <a href="/stock-report" class="btn btn-info">
                        <i class="bi bi-eye"></i> View Report
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 dashboard-card" onclick="location.href='/daily-report'">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text text-warning" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Daily Report</h5>
                    <p class="text-muted">Complete daily summary</p>
                    <a href="/daily-report" class="btn btn-warning">
                        <i class="bi bi-calendar-day"></i> View Report
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Quick Info</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Current Branch: <span class="text-primary">${branch}</span></h6>
                            <p>Branch Location: Hyderabad</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Available Products:</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> Chicken</li>
                                <li><i class="bi bi-check-circle text-success"></i> Mutton</li>
                                <li><i class="bi bi-check-circle text-success"></i> Boti</li>
                                <li><i class="bi bi-check-circle text-success"></i> Thalakaya</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
` }) %>